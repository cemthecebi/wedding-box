# Wedding Box - Environment Variables

# Site Configuration
SITE_URL=http://localhost:8000
SITE_NAME="Wedding Box"
SITE_DESCRIPTION="Düğün Fotoğraf ve Video Paylaşım Platformu"

# Database Configuration
DB_HOST=localhost
DB_NAME=wedding_box
DB_USER=your_db_username
DB_PASS=your_db_password
DB_CHARSET=utf8mb4

# File Upload Settings
MAX_FILE_SIZE=26214400
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,video/mp4,video/mov,video/avi,video/webm
UPLOAD_DIR=uploads

# Security Settings
SESSION_SECRET=your_session_secret_here
CSRF_TOKEN_SECRET=your_csrf_token_secret_here

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Production Settings (set DEBUG=false in production)
# DEBUG=false
# LOG_LEVEL=error 