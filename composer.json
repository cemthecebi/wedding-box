{
    "name": "wedding-box/wedding-photo-sharing",
    "description": "Düğün fotoğraf ve video paylaşım uygulaması",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "slim/php-view": "^3.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "endroid/qr-code": "^4.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WeddingBox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeddingBox\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 